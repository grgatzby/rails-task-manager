<h2><%= @task.title.capitalize %></h2>
<p>Content : <%= @task.details %></p>
<p>Status : <%= "#{@task.completed ? "completed": "to do"}" %></p>


<p><%= link_to "Delete this task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>

<p><%= link_to "Edit this task", edit_task_path(@task)%></p>
<p><%= link_to 'back to list', root_path %></p>
